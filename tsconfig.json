{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",                       
    "module": "commonjs",                    
    "lib": ["es2018"],                       
    "allowJs": true,                          
    "jsx": "react-native",               
    "noEmit": true, 
    "isolatedModules": true,
    "moduleResolution": "node",               
    "baseUrl": "components",
    "paths": {
      "~/*": ["*"],
     }, 
     "allowSyntheticDefaultImports": true,
     "esModuleInterop": true,
     "skipLibCheck": false
  },
  "include": ["components/**/*"],
}